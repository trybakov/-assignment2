<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link href="/css/styles.css" type="text/css" rel="stylesheet"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <!-- delete a book view -->
    <h3>To delete a book, click on the red X button.</h3>
    <div class="container">
        <div class="all-books">
            <% let i = 0 %>
            <% data.forEach(s=> { %>
            <form action="<%=`home/${s.name}/delete?_method=DELETE` %>" method="POST">
            <% i++ %>
            <li class="books-delete">
                <button class="delete-button" type="submit" onclick="return confirm('Are you sure you want to delete this record?')">X</button>
                <a href="/books/<%= i %>"><%= s.name %></a>
            </li>
            </form>
            <% }); %>
        </div>
        <div class="nav">
            <hr>  
            <a href="../home">List of Books | </a>
            <a href="../AddNewBook">Add A Book | </a>
            <a href="../DeleteABook">Delete A Book</a>
        </div> 
    </div>            
</body>
</html>